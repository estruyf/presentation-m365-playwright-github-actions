{
  "$schema": "https://elio.dev/demo-time.schema.json",
  "title": "2.automation",
  "description": "",
  "demos": [
    {
      "title": "ðŸª§ Automation",
      "steps": [
        {
          "action": "snippet",
          "contentPath": "./defaults/show_slide.json",
          "args": {
            "SLIDES_URL": "http://localhost:3030/26"
          }
        }
      ]
    },
    {
      "id": "2.automation.show_repository",
      "title": "1. The repository",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "vscode.open",
          "args": "https://github.com/estruyf/presentation-m365-playwright-github-actions"
        }
      ]
    },
    {
      "title": "2. Configure the TOPT",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "vscode.open",
          "args": "https://github.com/estruyf/presentation-m365-playwright-github-actions/settings/secrets/actions"
        }
      ]
    },
    {
      "title": "ðŸª§ Step 2",
      "steps": [
        {
          "action": "snippet",
          "contentPath": "./defaults/show_slide.json",
          "args": {
            "SLIDES_URL": "http://localhost:3030/35"
          }
        }
      ]
    },
    {
      "id": "2.automation.create_workflow",
      "title": "3. Create workflow",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.toggleSidebarVisibility"
        },
        {
          "action": "create",
          "path": ".github/workflows/e2e.yml",
          "contentPath": "2.automation/step1.yml"
        },
        {
          "action": "open",
          "path": ".github/workflows/e2e.yml"
        }
      ]
    },
    {
      "title": "4. Highlight work dir",
      "steps": [
        {
          "action": "highlight",
          "path": ".github/workflows/e2e.yml",
          "position": "15:17"
        }
      ]
    },
    {
      "title": "ðŸª§ Step 3",
      "steps": [
        {
          "action": "snippet",
          "contentPath": "./defaults/show_slide.json",
          "args": {
            "SLIDES_URL": "http://localhost:3030/38"
          }
        }
      ]
    },
    {
      "id": "2.automation.add_playwright",
      "title": "5. Add Playwright",
      "steps": [
        {
          "action": "snippet",
          "contentPath": "./defaults/insert_and_highlight.json",
          "args": {
            "MAIN_FILE": ".github/workflows/e2e.yml",
            "CONTENT_PATH": "2.automation/step3.yml",
            "CONTENT_POSITION": "22",
            "HIGHLIGHT_POSITION": ""
          }
        }
      ]
    },
    {
      "title": "ðŸª§ First run",
      "steps": [
        {
          "action": "snippet",
          "contentPath": "./defaults/show_slide.json",
          "args": {
            "SLIDES_URL": "http://localhost:3030/43"
          }
        }
      ]
    },
  ]
}
